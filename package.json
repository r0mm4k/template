    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "mini-css-extract-plugin": "^2.7.5",
    "prettier": "^2.8.6",
    "sass": "^1.59.3",
    "sass-loader": "^13.2.1",
