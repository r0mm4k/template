  "scripts": {
    "start": "webpack serve --env port=3000",
    "build:prod": "webpack --env mode=production",
    "analyze:prod": "npm run build:prod --env analyze=on",
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test:style": "stylelint \"**/*.scss\"",
    "test:style:fix": "npm run test:style -- --fix",
    "test:prettier": "prettier . --check",
    "test:prettier:fix": "prettier . --write",
    "test:ts": "npx tsc -p tsconfig.json",
    "check": "npm run test:lint && npm run test:style && npm run test:prettier && npm run test:ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
