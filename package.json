    "@babel/preset-typescript": "^7.21.0",
    "@types/node": "^18.15.5",
    "@types/react": "^17.0.53",
    "@types/react-dom": "^17.0.18",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
